<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pawansinghchouhan05.callcustomizer">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".core.application.CallCustomizerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splashScreen.activity.SplashScreenActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".core.receiver.ServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity android:name=".introScreen.activity.IntroScreenActivity" />
        <activity android:name=".registrationOrLogin.activity.RegistrationOrLoginActivity_"></activity>
    </application>

</manifest>