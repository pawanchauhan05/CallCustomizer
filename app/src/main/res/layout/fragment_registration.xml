<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".registrationOrLogin.activity.RegistrationOrLoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="10dip">

        <!--Email Lable-->

        <EditText
            android:textSize="18.0sp"
            android:gravity="center"
            android:id="@+id/editName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginRight="30.0sp"
            android:layout_marginBottom="10.0sp"
            android:hint="Email"
            android:inputType="textEmailAddress" />
        <!--  Password Label -->

        <EditText
            android:textSize="18.0sp"
            android:gravity="center"
            android:id="@+id/editPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginRight="30.0sp"
            android:layout_marginBottom="10.0sp"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:textSize="18.0sp"
            android:gravity="center"
            android:id="@+id/conformPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginRight="30.0sp"
            android:layout_marginBottom="10.0sp"
            android:hint="Conform Password"
            android:inputType="textPassword" />

        <!-- Login button -->
        <Button
            android:textSize="18.0sp"
            android:textColor="@color/loginTextColor"
            android:id="@+id/buttonRegisterUser"
            android:background="@drawable/round_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginTop="10.0sp"
            android:layout_marginRight="30.0sp"
            android:text="Registration"
            android:textAllCaps="false" />

        <Button
            android:textSize="18.0sp"
            android:textColor="@color/loginTextColor"
            android:id="@+id/loginButton"
            android:background="@drawable/round_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginTop="10.0sp"
            android:layout_marginRight="30.0sp"
            android:text="Log In"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>

