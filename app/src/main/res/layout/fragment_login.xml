<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dip">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:textSize="18.0sp"
            android:gravity="center"
            android:id="@+id/editUserEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginRight="30.0sp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:textSize="18.0sp"
            android:gravity="center"
            android:id="@+id/editPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginRight="30.0sp"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:textSize="18.0sp"
        android:textColor="@color/loginTextColor"
        android:id="@+id/loginButton"
        android:background="@drawable/round_login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0sp"
        android:layout_marginTop="10.0sp"
        android:layout_marginRight="30.0sp"
        android:text="Log In"
        android:textAllCaps="false" />

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/textViewForgotPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0sp"
        android:layout_marginBottom="10.0sp"
        android:clickable="true"
        android:text="Forgot Password?" />

    <Button
        android:textSize="18.0sp"
        android:textColor="@color/loginTextColor"
        android:id="@+id/buttonRegisterUser"
        android:background="@drawable/round_login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0sp"
        android:layout_marginTop="5.0sp"
        android:layout_marginRight="30.0sp"
        android:text="Registration"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/fbLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3b5998"
        android:layout_marginLeft="30.0sp"
        android:layout_marginTop="10.0sp"
        android:layout_marginRight="30.0sp"
        android:text="Sign in with facebook"
        android:textAllCaps="false"
        android:textColor="#fff" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3b5998"
        android:layout_marginLeft="30.0sp"
        android:layout_marginTop="10.0sp"
        android:layout_marginRight="30.0sp"
        android:text="Sign in with facebook"
        android:textAllCaps="false"
        android:textColor="#fff" />


</LinearLayout>
</LinearLayout>