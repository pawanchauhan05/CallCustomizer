<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#3b5998"
            android:layout_marginLeft="30.0sp"
            android:layout_marginTop="10.0sp"
            android:layout_marginRight="30.0sp"
            android:text="Sign in with facebook"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_25sdp"
        android:textAlignment="center"
        android:text="Login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/editUserEmail"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_15sdp"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:hint="Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/editPassword"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_5sdp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="Password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <Button
        android:id="@+id/loginButton"
        android:background="@drawable/round_corner_button"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp"
        android:textAllCaps="false"
        android:text="Log In"/>

        <TextView
            android:textSize="@dimen/_16sdp"
            android:id="@+id/textViewForgotPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"/>

        <TextView
            android:textSize="@dimen/_16sdp"
            android:id="@+id/buttonRegisterUser"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Not a user? SignUp"/>

        <LinearLayout
        android:weightSum="1"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/fragment_login_page_or_left_line"
            android:layout_width="fill_parent"
            android:layout_weight="0.30"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#d5d5d5" />

        <TextView
            android:id="@+id/fragment_login_page_or_text"
            android:layout_width="fill_parent"
            android:layout_weight="0.40"
            android:layout_height="wrap_content"
            android:textColor="#d5d5d5"
            android:text="or"
            android:textAlignment="center" />

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="fill_parent"
            android:layout_weight="0.30"
            android:layout_height="@dimen/_1sdp"
            android:background="#d5d5d5"
            />

    </LinearLayout>

        <in.championswimmer.libsocialbuttons.buttons.BtnFacebook
            android:id="@+id/fbLogin"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:text="Log in with Facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
        />

    </LinearLayout>

</ScrollView>